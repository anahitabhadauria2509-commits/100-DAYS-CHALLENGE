//Write a program to print the following pattern://

   *
  ***
 *****
*******
 *****
  ***
   *



#include <stdio.h>

int main() {
    int rows = 7;
    int i, j, space;

   
    for (i = 1; i <= (rows + 1) / 2; i++) 
        {
        // Print spaces
        for (space = 1; space <= ((rows + 1) / 2) - i; space++) 
          {
            printf(" ");
          }
        // Print stars
        for (j = 1; j <= 2 * i - 1; j++) 
        {
            printf("*");
        }
        printf("\n");
    }

    // Lower half of the diamond
    for (i = (rows - 1) / 2; i >= 1; i--) {
        // Print spaces
        for (space = 1; space <= ((rows + 1) / 2) - i; space++) 
        {
            printf(" ");
        }
        // Print stars
        for (j = 1; j <= 2 * i - 1; j++)
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
